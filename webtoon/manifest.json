{
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
      },
    "browser_action": {
        "default_popup": "hello.html",
        "default_icon": "hello_extensions.png"
    },
    "permissions": [
        "history",
        "storage",
        "tabs",
        "activeTab",
        "*://*/*"
    ]
}